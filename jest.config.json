{
  "roots": [
    "<rootDir>/src"
  ],
  "preset": "ts-jest",
  "testEnvironment": "jest-environment-jsdom-fourteen",
  "coveragePathIgnorePatterns": ["<rootDir>/src/mocks/", "<rootDir>/node_modules/"],
  "setupFilesAfterEnv": [
    "<rootDir>/scripts/setup_enzyme.ts"
  ],
  "clearMocks": true,
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.jest.json"
    }
  }
}
