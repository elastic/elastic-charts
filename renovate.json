{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:weekends",
    ":dependencyDashboard"
  ],
  "ignorePaths": ["./.github/**"],
  "enabledManagers": ["npm"],
  "baseBranches": ["main"],
  "separateMajorMinor": false,
  "rangeStrategy": "bump",
  "assignAutomerge": true,
  "semanticCommits": "enabled",
  "labels": ["dependencies", "skip-newsletter"],
  "reviewers": ["team:datavis"],
  "schedule": ["every 2 weeks on monday"],
  "vulnerabilityAlerts": {
    "enabled": false
  },
  "packageRules": [
    {
      "enabled": false,
      "matchPackageNames": [
        "/.*/",
        "!@elastic/eui",
        "!@elastic/datemath",
        "!prettier",
        "!pretty-quick",
        "!@playwright/test",
        "!/.*typescript.*/",
        "!/ts-.+/",
        "!/.*eslint.*/",
        "!/.*jest.*/",
        "!/^@typescript-eslint/.+/",
        "!/^@microsoft/api-.+/"
      ]
    },
    {
      "groupName": "@elastic/eui",
      "matchPackageNames": ["@elastic/eui", "@elastic/datemath"],
      "matchUpdateTypes": ["major"],
      "schedule": ["every 1 week on monday"],
      "automerge": true,
      "enabled": true
    },
    {
      "groupName": "typescript",
      "automerge": true,
      "enabled": true,
      "matchPackageNames": [
        "/.*typescript.*/",
        "/ts-.+/",
        "/^@typescript-eslint/.+/",
        "/^@microsoft/api-.+/",
        "!ts-jest",
        "!ts-loader",
        "!json-schema-to-typescript"
      ]
    },
    {
      "groupName": "eslint",
      "matchPackageNames": [
        "prettier",
        "pretty-quick",
        "/.*eslint.*/",
        "!/.*typescript.*/",
        "!/^@typescript-eslint/.+/"
      ],
      "automerge": true,
      "enabled": false
    },
    {
      "groupName": "jest",
      "automerge": true,
      "enabled": true,
      "matchPackageNames": ["/.*jest.*/"]
    },
    {
      "groupName": "playwright",
      "matchPackageNames": ["@playwright/test"],
      "automerge": true,
      "enabled": true
    }
  ]
}
