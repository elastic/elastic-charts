{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "schedule:weekends", ":disableDependencyDashboard"],
  "ignorePaths": ["./.github/**"],
  "enabledManagers": ["npm"],
  "baseBranches": ["master"],
  "separateMajorMinor": false,
  "rangeStrategy": "bump",
  "assignAutomerge": true,
  "semanticCommits": "enabled",
  "labels": ["dependencies", "skip-newsletter"],
  "reviewers": ["team:datavis"],
  "vulnerabilityAlerts": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchPackagePatterns": [".*"],
      "excludePackageNames": ["@elastic/eui", "@elastic/datemath", "prettier", "pretty-quick"],
      "excludePackagePatterns": [".*typescript.*", "ts-.+", ".*eslint.*"],
      "enabled": false
    },
    {
      "groupName": "@elastic/eui",
      "matchPackageNames": ["@elastic/eui", "@elastic/datemath"],
      "matchUpdateTypes": ["major"],
      "schedule": ["every week on monday"],
      "automerge": true,
      "enabled": true
    },
    {
      "groupName": "typescript",
      "matchPackagePatterns": [".*typescript.*", "ts-.+"],
      "schedule": ["every 3 weeks on monday"],
      "automerge": true,
      "enabled": true
    },
    {
      "groupName": "eslint",
      "matchPackagePatterns": [".*eslint.*"],
      "matchPackageNames": ["prettier", "pretty-quick"],
      "schedule": ["every 3 weeks on monday"],
      "automerge": true,
      "enabled": true
    }
  ]
}
