{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "es6",
    "target": "es6",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.*"]
}
